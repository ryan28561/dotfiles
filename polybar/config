[module/toggle]
type = custom/script
exec = ~/.config/polybar/scripts/toggle.sh
interval = 0.2
format = <label>
format-foreground = ${colors.cyan}
format-padding = 1
label = %output%

tail = true
click-left = mpc toggle &

[module/next]
type = custom/text

content = "ï‘"
content-foreground = %{colors.cyan}
content-padding = 2
content-font = 2

click-left = mpc next &

